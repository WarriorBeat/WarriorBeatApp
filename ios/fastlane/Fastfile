# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)
# Get Env Vars
fastlane_require 'dotenv'

platform :ios do
  desc "Build and Release to AppCenter" 
  lane :stage do
    sh("./load_secret.sh")
    Dotenv.load(File.join(dir, '.env'))
    Dotenv.load(File.join("../../", ".env.stage"))
    get_certificates(development:true)
    get_provisioning_profile(development:true)
    add_badge
    build_app(scheme: "warriorbeatapp", export_options: {method: "development"})
    appcenter_upload(
      should_clip: false,
      release_notes_link: "https://github.com/WarriorBeat/WarriorBeatApp/blob/develop/CHANGELOG.md"
    )
    sh("./load_secret.sh clean")
  end

  desc "Install Release on Device"
  lane :install_release do
    Dotenv.load(File.join(dir, '.env'))
    Dotenv.load(File.join("../../", ".env.stage"))
    get_certificates(development:true)
    get_provisioning_profile(development:true)
    add_badge
    build_app(scheme: "warriorbeatapp", export_options: {method: "development"})
    install_on_device(ipa: lane_context[SharedValues::IPA_OUTPUT_PATH])
  end
end
